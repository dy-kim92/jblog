<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
	
<!-- MyBatis 설정 -->
<configuration>
	
	<!-- parameterType, resultType 에서 사용하는 객체는 별칭을 지어줄 수 있다 -->
	<typeAliases>
		<typeAlias alias="userVo" type="com.jblog.vo.UserVo"/>
		<typeAlias alias="blogVo" type="com.jblog.vo.BlogVo"/>
	</typeAliases>

	<mappers>
		<mapper resource="mybatis/mappers/users.xml" />
		<mapper resource="mybatis/mappers/blog.xml" />
	</mappers>
	
</configuration>